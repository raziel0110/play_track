<!DOCTYPE html>
<html>
  <head>
    <title>MusicApi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'shared/navbar', formats: :html %>

    <% if notice %>
      <div class="alert alert-info" role="alert" data-controller='flash'>
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" data-action="click->flash#close">
          <span aria-hidden="true" >&times;</span>
        </button>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger" role="alert" data-controller='flash'>
        <%= alert %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" data-action="click->flash#close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
